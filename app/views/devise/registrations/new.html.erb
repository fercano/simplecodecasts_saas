<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <% if params[:plan] == '2' %>
  <h1 class="text-center">Pro Account</h1>
  <p class="text-center">Sign up for the pro account for RD$500/m and get the latest insigts and contacts for new information!</p>
  <% else %>
    <h1 class="text-center">Basic Account</h1>
    <p class="text-center">Sign up and get basic access to our developer community.</p>
  <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h1>Sign up</h1>
      
      <% if params[:plan] == '2' %>
      <%= render "pro_form" %>
      <% else %>
      <%= render "basic_form" %>
      <% end %>
      
      
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>